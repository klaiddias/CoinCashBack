@page "/"

<PageTitle>Dashboard</PageTitle>
<MudPaper Class="d-flex flex-wrap gap-4 pa-5" MinWidth="100%">
    <MudPaper Width="400px" Height="100%" Class="pa-0">
        <MudCard Elevation="3">
            <MudCardHeader Class="pa-0">
                <CardHeaderAvatar>
                    <MudAvatar Image="https://assets.coingecko.com/coins/images/1/thumb/bitcoin.png?1547033579" Alt="Bitcoin"/>
                </CardHeaderAvatar>
                <CardHeaderContent>
                    <MudText Typo="Typo.body1">BitCoin</MudText>
                    <MudText Typo="Typo.body2">USD $4,3683.00</MudText>
